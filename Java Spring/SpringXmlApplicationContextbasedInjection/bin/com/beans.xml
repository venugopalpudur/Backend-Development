<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="emp" class="com.Employee">
    	<!-- Setter Injection -->
    	<property name="eid" value="1001"></property>
    	<property name="ename" value="Geetha"></property>
    </bean>
    
    <bean id="emp1" class="com.Employee">
    	<!-- Constructor Injection -->
    	<constructor-arg type="int" value="1002" index="0"></constructor-arg>
    	<constructor-arg type="String" value="varun" index="1"></constructor-arg>
    </bean>

</beans>